<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".details.RepositoryDetailsFragment">

    <include android:id="@+id/appBarLayout"
        layout="@layout/app_bar_layout"/>

    <include android:id="@+id/detailsRepositorySummaryDetailsLayout"
        layout="@layout/repository_summary_details_layout"/>

    <com.gart.common.widgets.LabelValueWidget
        android:id="@+id/detialsRepositoryStarsLabelValueWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_16dp"
        android:layout_marginTop="@dimen/default_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsRepositorySummaryDetailsLayout"
        app:bottom_label="@string/repository_stars_label"
        tools:top_label="2201" />

    <com.gart.common.widgets.LabelValueWidget
        android:id="@+id/detialsRepositoryForksLabelValueWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_32dp"
        android:layout_marginTop="@dimen/default_8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailsRepositorySummaryDetailsLayout"
        app:layout_constraintStart_toEndOf="@+id/detialsRepositoryStarsLabelValueWidget"
        app:bottom_label="@string/repository_forks_label"
        tools:top_label="401" />

    <com.gart.common.widgets.LabelValueWidget
        android:id="@+id/detialsRepositoryIssuesLabelValueWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_32dp"
        android:layout_marginTop="@dimen/default_8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailsRepositorySummaryDetailsLayout"
        app:layout_constraintStart_toEndOf="@+id/detialsRepositoryForksLabelValueWidget"
        app:bottom_label="@string/repository_issues_label"
        tools:top_label="9" />

    <com.gart.common.widgets.LabelValueWidget
        android:id="@+id/detialsRepositoryWatchersLabelValueWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_32dp"
        android:layout_marginTop="@dimen/default_8dp"
        android:layout_marginEnd="@dimen/default_16dp"
        app:layout_constraintTop_toBottomOf="@+id/detailsRepositorySummaryDetailsLayout"
        app:layout_constraintStart_toEndOf="@+id/detialsRepositoryIssuesLabelValueWidget"
        app:layout_constraintEnd_toEndOf="parent"
        app:bottom_label="@string/repository_watchers_label"
        tools:top_label="324" />

</androidx.constraintlayout.widget.ConstraintLayout>