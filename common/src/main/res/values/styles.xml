<resources>

    <style name="GartTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="HeadingTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:height">@dimen/default_32dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
